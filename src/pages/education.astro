                    const index = Array.from(document.querySelectorAll('.stat-donut')).indexOf(donut);
                    donut.style.setProperty('--animation-delay', `${index * 0.5}s`);
                    donutObserver.unobserve(donut); // Stop observing once animated
                }
            });
