    document.addEventListener('DOMContentLoaded', () => {
        const navLinks = document.querySelectorAll('.sidebar-nav a');
        
        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = link.getAttribute('href');
                if (!targetId) return;
                
                const targetElement = document.querySelector<HTMLElement>(targetId);
                
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });

                    // Update active state
                    navLinks.forEach(l => l.classList.remove('active'));
                    link.classList.add('active');
                }
            });
        });

        // Update active state on scroll
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.5
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const id = entry.target.getAttribute('id');
                    navLinks.forEach(link => {
                        link.classList.remove('active');
                        if (link.getAttribute('href') === `#${id}`) {
                            link.classList.add('active');
                        }
                    });
                }
            });
        }, observerOptions);

        document.querySelectorAll('.content-block').forEach(block => {
            observer.observe(block);
        });

        // Timeline item toggle for mobile/click
        const timelineItems = document.querySelectorAll('.timeline-item');
        timelineItems.forEach(item => {
            // Use the .timeline-content div as the click target
            const content = item.querySelector('.timeline-content');
            content?.addEventListener('click', () => {
                item.classList.toggle('expanded');
            });
            // Also allow Enter/Space key for accessibility
            content?.addEventListener('keydown', (e: Event) => {
                const keyboardEvent = e as KeyboardEvent;
                if (keyboardEvent.key === 'Enter' || keyboardEvent.key === ' ') {
                    keyboardEvent.preventDefault(); // Prevent default space scroll
                    item.classList.toggle('expanded');
                }
            });
        });

        // Video Carousel Functionality
        const carousel = document.querySelector('.video-carousel');
        if (carousel) {
            const slides = carousel.querySelectorAll('.carousel-slide');
            const dots = carousel.querySelectorAll('.dot');
            const prevBtn = carousel.querySelector('.prev');
            const nextBtn = carousel.querySelector('.next');
            let currentSlide = 0;
            let isAnimating = false;

            // Lightbox functionality
            const lightbox = document.getElementById('educationLightbox');
            const lightboxCloseBtn = lightbox?.querySelector('.lightbox-close');
            const lightboxName = lightbox?.querySelector('.artist-name');
            const lightboxSubtitle = lightbox?.querySelector('.artist-subtitle');
            const youtubePlayer = document.getElementById('youtubePlayer');

            // Add click handlers to slides
            slides.forEach((slide, index) => {
                slide.addEventListener('click', () => {
                    if (!slide.classList.contains('active')) return; // Only allow active slide to trigger lightbox
                    console.log('Slide clicked:', index);
                    // Get the video info directly from the current slide
                    const videoInfo = slide.querySelector('.video-info');
                    const title = videoInfo?.querySelector('h3')?.textContent || '';
                    const subtitle = videoInfo?.querySelector('p')?.textContent || '';
                    console.log('Title:', title);
                    console.log('Subtitle:', subtitle);
                    if (lightbox && lightboxName && lightboxSubtitle && youtubePlayer) {
                        // Pause all carousel videos
                        slides.forEach(s => {
                            const video = s.querySelector('video');
                            if (video) video.pause();
                        });
                        // Set lightbox content
                        lightboxName.textContent = title;
                        lightboxSubtitle.textContent = subtitle;
                        // Set YouTube ID based on the clicked slide
                        let youtubeId = '';
                        if (title === 'Chloe Foy') {
                            youtubeId = 'xc75QT13BlM';
                        } else if (title === 'Nyah Grace') {
                            youtubeId = 'cwAeW8UnL1s';
                        } else if (title === 'Pablo Miller') {
                            youtubeId = 'qtf7wV2Wcfo';
                        }
                        console.log('YouTube ID:', youtubeId);
                        if (youtubeId) {
                            youtubePlayer.src = `https://www.youtube.com/embed/${youtubeId}?autoplay=1&rel=0`;
                        }
                        // Show lightbox
                        lightbox.classList.add('active');
                        document.body.style.overflow = 'hidden';
                    }
                });
            });

            // Close lightbox
            function closeLightbox() {
                if (lightbox && youtubePlayer) {
                    lightbox.classList.remove('active');
                    youtubePlayer.src = '';
                    document.body.style.overflow = '';

                    // Resume carousel videos
                    const activeVideo = slides[currentSlide].querySelector('video');
                    if (activeVideo) {
                        activeVideo.play().catch(() => {
                            console.log('Autoplay prevented');
                        });
