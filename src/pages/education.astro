            threshold: 0.5,
            rootMargin: '0px'
        });

        // Observe all donut charts
        document.querySelectorAll('.stat-donut').forEach(donut => {
            donutObserver.observe(donut);
        });

        const logo = document.querySelector('.education-logo') as HTMLElement;
        let lastScrollY = window.scrollY;
        
        if (logo) {
            // Set initial state - visible if at top
            if (window.scrollY <= 1) {
                logo.classList.add('visible');
            }

            // Hide logo on scroll
            window.addEventListener('scroll', () => {
                const currentScrollY = window.scrollY;
                
                if (currentScrollY > 1) {
                    // If we've scrolled at all, hide the logo
                    logo.classList.remove('visible');
                } else {
                    // If we're back at the top, show the logo
                    logo.classList.add('visible');
                }
                
                lastScrollY = currentScrollY;
            }, { passive: true });
        }

        // Benefit items animation
        const benefitObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Add a small delay between each item's animation
                    const index = Array.from(document.querySelectorAll('.benefit-item')).indexOf(entry.target);
                    setTimeout(() => {
                        entry.target.classList.add('animate');
