        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 3rem;
        font-weight: 400;
    }

    .client-logos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
